#pragma once
#include <string>

using namespace std;

class Morada {
public:
	Morada();
	Morada(string rua, string porta,string andar,string cpostal, string localidade);
	void setRua(string rua);
	void setPorta(string porta);
	void setAndar(string andar);
	void setCPostal(string cpostal);
	void setLocalidade(string localidade);
	string getRua() const;
	string getPorta() const;
	string getAndar() const;
	string getCPostal() const;
	string getLocalidade() const;
	string getMorada() const;
	void showMorada() const;
private:
	string rua;
	string porta;
	string andar;
	string cpostal;
	string localidade;
};
